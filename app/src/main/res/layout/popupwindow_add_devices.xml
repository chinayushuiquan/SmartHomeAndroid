<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ion_new"
    android:padding="@dimen/margin_15">

    <RelativeLayout
        android:id="@+id/pop_window_rl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pop_window_iv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10" />


        <TextView
            android:id="@+id/pop_window_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/pop_window_iv_1"
            android:text="@string/remote_control"
            android:textColor="@color/white"

            android:textSize="@dimen/text_size_14" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/white_line_shape" />

    <RelativeLayout
        android:id="@+id/pop_window_rl_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/pop_window_iv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_centerVertical="true"
            />


        <TextView
            android:id="@+id/pop_window_tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/pop_window_iv_2"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/white"

            android:text="@string/other_devices"
            />

    </RelativeLayout>

</LinearLayout>