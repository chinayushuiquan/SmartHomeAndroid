<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="12">

    <include
        layout="@layout/top_bar_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="@dimen/padding_20"
        android:paddingRight="@dimen/padding_20"
        android:layout_weight="11"
        android:weightSum="11"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/system_relay_box_rl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16"
                android:paddingTop="@dimen/padding_10"
                android:paddingBottom="@dimen/padding_10"
                android:gravity="center_vertical"

                android:text="@string/system_relay_box"
                />


            <TextView
                android:id="@+id/system_relay_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_10"
                android:paddingBottom="@dimen/padding_10"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/arrow_right_black"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/gray_line_shape"
                android:layout_below="@id/system_relay_box"
                />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/system_sync_data_rl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/padding_10"
                android:paddingTop="@dimen/padding_10"
                android:textSize="@dimen/text_size_16"

                android:text="@string/system_sync_data"
                />


            <TextView
                android:id="@+id/system_sync_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/padding_10"
                android:paddingTop="@dimen/padding_10"
                android:drawableRight="@drawable/arrow_right_black"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@id/system_sync_data"
                android:background="@drawable/gray_line_shape" />

        </RelativeLayout>

    </LinearLayout>


    </LinearLayout>
