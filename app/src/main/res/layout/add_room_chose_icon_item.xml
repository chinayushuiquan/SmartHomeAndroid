<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/padding_10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    >

    <RelativeLayout
        android:id="@+id/room_add_icon_item_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/room_add_icon_item_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/room_add_icon_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/room_add_icon_item_iv"
            android:textSize="14sp"
            android:text="@string/door1"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>


    <ImageView
        android:id="@+id/room_add_select_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/room_add_icon_item_rl"
        android:layout_centerVertical="true"
        />



</RelativeLayout>