<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <!-- 定义一个TimePicker组件 -->
    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="周" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/margin_10"
        >

        <Button
            android:id="@+id/weekday_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/transparent"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="1"
            />


        <Button
            android:id="@+id/weekday_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/transparent"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="2"
            />



        <Button
            android:id="@+id/weekday_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/transparent"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="3"
            />


        <Button
            android:id="@+id/weekday_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/transparent"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="4"
            />


        <Button
            android:id="@+id/weekday_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/transparent"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="5"
            />


        <Button
            android:id="@+id/weekday_6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/transparent"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="6"
            />


        <Button
            android:id="@+id/weekday_7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/transparent"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="7"
            />

    </LinearLayout>


    <ImageView
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/scenes_device_edit_ok"
        android:layout_marginTop="@dimen/margin_10"
        />


</LinearLayout>
