<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.5"
        android:background="@drawable/ir_rc_tv1_bg"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/tv1_btn_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:background="@drawable/tv1_btn1" />

            <Button
                android:id="@+id/tv1_btn_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tv1_btn2"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_alignBaseline="@+id/tv1_btn_enter"
                android:layout_alignBottom="@+id/tv1_btn_enter"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/tv1_btn_vol_mute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/tv1_btn3"
                android:minHeight="0dp"
                android:minWidth="0dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="4.5"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/tv1_btn_vol_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/tv1_btn4"
                android:minHeight="0dp"
                android:minWidth="0dp"/>


                <RelativeLayout
                    android:id="@+id/rl_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ir_rc_tv1_big_round"
                    >


                    <Button
                        android:id="@+id/tv1_btn_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/tv1_btn10"
                        android:minHeight="0dp"
                        android:minWidth="0dp"/>


                    <Button
                        android:id="@+id/tv1_btn_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv1_btn_ok"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:background="@drawable/tv1_btn8"
                        android:minHeight="0dp"
                        android:minWidth="0dp"/>

                    <Button
                        android:id="@+id/tv1_btn_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:background="@drawable/tv1_btn6"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        />

                    <Button
                        android:id="@+id/tv1_btn_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv1_btn_ok"
                        android:background="@drawable/tv1_btn9"
                        android:layout_marginTop="70dp"
                        android:layout_alignLeft="@+id/tv1_btn_top"
                        android:layout_alignStart="@+id/tv1_btn_top"
                        android:minHeight="0dp"
                        android:minWidth="0dp"/>

                    <Button
                        android:id="@+id/tv1_btn_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_20"
                        android:background="@drawable/tv1_btn7"
                        android:minHeight="0dp"
                        android:minWidth="0dp"/>
                </RelativeLayout>


            <Button
                android:id="@+id/tv1_btn_vol_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                android:background="@drawable/tv1_btn5"
                android:minHeight="0dp"
                android:minWidth="0dp"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/tv1_btn_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/tv1_btn11"
                android:minHeight="0dp"
                android:minWidth="0dp"/>

            <Button
                android:id="@+id/tv1_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/tv1_btn12"
                android:minHeight="0dp"
                android:minWidth="0dp"/>

            <Button
                android:id="@+id/tv1_btn_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/tv1_btn13"
                android:minHeight="0dp"
                android:minWidth="0dp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>