<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="11"
    android:background="@drawable/login_register_activity_bg">

    <include android:id="@+id/home_top_bar"
        layout="@layout/top_bar_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/register_psd_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        android:textColorHint="@color/white"
        android:theme="@style/EditTextLineColor"
        android:hint="@string/register_psd"
        app:hintTextAppearance="@style/HintAppearance"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/login_psd_psw_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/login_password_lock_icon"
            android:drawableStart="@drawable/login_password_lock_icon"
            android:drawablePadding="@dimen/padding_10"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/white"
            />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/register_confirm_psd_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        android:textColorHint="@color/white"
        android:theme="@style/EditTextLineColor"
        android:hint="@string/register_confirm_psd"
        app:hintTextAppearance="@style/HintAppearance"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/login_confirm_psd_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/register_confirm_psd_icon"
            android:drawableStart="@drawable/register_confirm_psd_icon"
            android:drawablePadding="@dimen/padding_10"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/white"
            />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/find_psw_done_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:background="@drawable/login_btn_bg_orange_shape"
        android:textColor="@color/white"
        android:text="@string/done"
        />
</LinearLayout>