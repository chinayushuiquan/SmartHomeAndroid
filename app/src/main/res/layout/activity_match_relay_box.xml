<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/top_bar_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/gray_line_shape" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:orientation="vertical"
        android:weightSum="11"
        >

    <ListView
        android:id="@+id/relay_match_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:divider="@drawable/gray_line_shape"
        android:choiceMode="singleChoice"
        android:cacheColorHint="@android:color/transparent"
        android:listSelector="@android:color/transparent">

    </ListView>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/gray_line_shape"
        android:layout_margin="@dimen/margin_20"
        />

   <Button
       android:id="@+id/add_rc_match_relay_box"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/login_btn_bg_orange_shape"
       android:text="@string/match"
       android:textColor="@color/white"
       android:layout_gravity="center_horizontal"
       android:layout_marginLeft="@dimen/margin_30"
       android:layout_marginRight="@dimen/margin_30"
       />
   </LinearLayout>

</LinearLayout>